{
    "manifest_version": 3,
    "name": "Copy Title And Url",
    "version": "1.1.3",
    "description": "Copy the title and url in markdown, pukiwiki, html format.",
    "homepage_url": "https://github.com/ooyama2002/chrome_CopyTitleAndUrl/",
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "64": "icon-64.png",
        "128": "icon-128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite",
        "contextMenus",
        "notifications"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}